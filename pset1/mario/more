#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int h;
do
{ 
      h = get_int("enter a positive integer for height:\n");
}
while(1>h || h>8);

int i;
for(i=0;i<h;i++)
{
    for(int space=(h-1); space>i; space--)
    {
        printf(" ");
    }
    for(int hash=0;hash<=i;hash++)
{
    printf("#");
    }
    printf("  ");
    for(int hash=0;hash<=i;hash++)
    {
        printf("#");
    }
    printf("\n");
}
}
